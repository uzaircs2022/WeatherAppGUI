<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        app:srcCompat="@drawable/upper" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_heading"
        android:text="Pakistan"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="90dp"
        android:layout_marginLeft="15dp"
        android:text="-8°C" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_heading"
        android:text="Cloudy"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/main_heading"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/ImageSize"
            android:layout_height="@dimen/ImageSize"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/ic_baseline_whatshot_24" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="13"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/ImageSize"
            android:layout_height="@dimen/ImageSize"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/ic_baseline_edit_location_24" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="0.4mB"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/ImageSize"
            android:layout_height="@dimen/ImageSize"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/ic_baseline_flare_24" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="81dp"
            android:layout_height="53dp"
            android:layout_marginTop="17dp"
            android:text="9k/h"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_heading"
        android:text="TODAY"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/main_heading"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/scrolling_image_size"
                    android:layout_height="@dimen/scrolling_image_size"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_icons8_partly_cloudy_day_64" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="12°C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/main_heading"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11 am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/scrolling_image_size"
                    android:layout_height="@dimen/scrolling_image_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_secondcloud" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="9°C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/main_heading"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="12 am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/scrolling_image_size"
                    android:layout_height="@dimen/scrolling_image_size"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_icons8_partly_cloudy_day_64" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="11°C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/main_heading"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/scrolling_image_size"
                    android:layout_height="@dimen/scrolling_image_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"

                    app:srcCompat="@drawable/ic_secondcloud" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="10°C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/main_heading"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView111"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="2 am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/imageView222"
                    android:layout_width="@dimen/scrolling_image_size"
                    android:layout_height="@dimen/scrolling_image_size"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_icons8_partly_cloudy_day_64" />

                <TextView
                    android:id="@+id/textView333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="11°C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:background="@drawable/main_heading">


                <TextView
                    android:id="@+id/textView122"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="3 am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/imageView233"
                    android:layout_width="@dimen/scrolling_image_size"
                    android:layout_height="@dimen/scrolling_image_size"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_secondcloud" />

                <TextView
                    android:id="@+id/textView344"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4°C"
                    android:textSize="@dimen/scrolling_text_size"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@drawable/main_heading">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/scrolling_image_size"
            android:layout_height="@dimen/scrolling_image_size"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/ic_baseline_low_priority_24" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="@dimen/scrolling_image_size"
            android:layout_height="@dimen/scrolling_image_size"
            android:layout_marginLeft="90dp"
            app:srcCompat="@drawable/ic_baseline_lens_24" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="@dimen/scrolling_image_size"
            android:layout_height="@dimen/scrolling_image_size"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/ic_baseline_forward_24" />
    </LinearLayout>

</LinearLayout>

